(defwindow bar
  :monitor 0
  :geometry (geometry
    :width "100%"
  :anchor "top center")
  :stacking "fg"
  :exclusive true
  (bar_layout)
)

(defwidget bar_layout []
  (centerbox
    :class "bar"
    :orientation "h"
    :spacing 0
    :space-evenly false
    :style "margin-top:${bar_margin*10 +10}px;padding-right:${bar_margin*300 +5}px;padding-left:${bar_margin*300 +5}px;"
    (bar_left)
    (bar_center)
    (bar_right)
  )
)
