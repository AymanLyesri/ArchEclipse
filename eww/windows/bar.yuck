(defwindow bar
  :monitor 0
  :geometry (geometry
    :width "100%"
    :height "10px"
  :anchor "top center")
  :stacking "fg"
  :exclusive true
  (bar_layout)
)

(defwidget bar_layout []
  (centerbox
    :space-evenly false
    :class "bar"
    :orientation "h"
    ; :halign "baseline"
    (bar_left)
    (bar_center)
    (bar_right)
  )
)