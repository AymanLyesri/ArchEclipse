(defwindow sidebar
  ; :stacking "fg"
  :monitor 0
  :exclusive false
  :geometry (geometry
    :anchor "center left"
  )
  (sidebar_layout)
)

(defwidget sidebar_layout []
  (eventbox
    :onhover "${EWW_CMD} update sidebar_rev=true"
    :onhoverlost "${EWW_CMD} update sidebar_rev=false"
    (revealer
      :reveal sidebar_rev
      :transition "slideright"
      (box
        :class "sidebar-layout"
        :space-evenly false
        ; :spacing 0
        :width 500
        :orientation "v"
        (sidebar_top)
        (sidebar_center)
        (sidebar_bottom)
      )
    )
  )
)

(defwidget sidebar_top []
  (box
    :orientation "v"
    :space-evenly false
    (sidebar_music)
  )
)

(defwidget sidebar_center []
  (box
    :space-evenly false
    :vexpand true
    (sidebar_waifu)
  )
)

(defwidget sidebar_bottom []
  (box
    :space-evenly false
    :valign "end"
    (sidebar_quote)
  )
)

(defwidget sidebar_music []
  (overlay
    :height 69
    (box ;Background
      :class "sidebar-music-background"
      :style "background-image: radial-gradient(ellipse at center, transparent 50%, rgba(0,0,0,0.5)), url('${music_art}');"
    )
    (centerbox
      :class "sidebar-music-box"
      :orientation "v"
      (box
        (label
          :class "sidebar-music-mediacontrols"
          :style "font-size: 5px;"
          :halign "start"
          :valign "start"
          :text music_icon
        )
      )
      (overlay
        (box
          :orientation "v"
          :halign "start"
          (label
            :class "sidebar-music-mediacontrols"
            :style "font-size: 1px"
            :halign "start"
            :text "${music_title}"
            :limit-width "30px"
          )
          (label
            :class "sidebar-music-mediacontrols"
            :style "font-size: 14px"
            
            :halign "start"
            :text music_artist
            :limit-width "20"
          )
        )
      )
      (box
        :space-evenly false
        :orientation "h"
        (button
          :width 25
          :halign "start"
          :onclick "scripts/music --previous"
          (label
            :class "sidebar-music-mediacontrols"
            :style "font-size: 26px"
            :text  "Û∞íÆ"
          )
        )
        (scale
          :class "sidebar-music-progress"
          :halign "center"
          :hexpand true
          :max 100
          :min 0
          :value "${music_prog}"
          :onchange "scripts/music --set-pos {}"
        )
        (button
          :width 25
          :halign "end"
          :onclick "scripts/music --next"
          (label
            :class "sidebar-music-mediacontrols"
            :style "font-size: 26px"
            :text  "Û∞í≠"
          )
        )
        (button ;Play button
          :class "sidebar-music-mediacontrols-bg"
          :width 45
          :halign "end"
          :onclick "scripts/music --play-pause"
          (label
            :class "sidebar-music-mediacontrols-font"
            :style "font-size: 26px"
            :halign "center"
            :text  "${player_active == 2 ? 'Û∞è§' : 'Û∞êä'}"
          )
        )
      )
    )
  )
)

