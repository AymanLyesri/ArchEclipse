(defwidget sidebar_waifu []
  (eventbox
    :space-evenly false
    :orientation "v"
    :hexpand true
    :vexpand true
    ; :class "sidebar-waifu-image"
    :onhover "${EWW_CMD} update display_tags=true"
    :onhoverlost "${EWW_CMD} update display_tags=false"
    
    (box
      :space-evenly false :spacing 10
      :orientation "v"
      :hexpand true
      :vexpand true
      (box ;Title
        :class "sidebar-title"
        (label
          :class "sidebar-title-text"
          :halign "start"
          :text "ÔÇä  Culture"
        )
        (label
          :class "sidebar-subtitle txt-low"
          :halign "end"
          :text "Dayumn those waifus !"
        )
      )
      (box ;Content
        :class "sidebar-waifu-content"
        :space-evenly false :spacing 12
        :orientation "h"
        :vexpand true
        (box ; Tag Buttons
          :space-evenly false :spacing 6
          :orientation "v"
          
          ; (button ; NSFW
            ;   :class "sidebar-waifu-toggle"
            ;   :onclick "scripts/./waifu.py fuckyWucky &"
            ;   :style "font-size: 11"
            ;   "NSFW üîû"
          ; )
          
          (revealer
            :transition "slidedown"
            :duration "500ms"
            :reveal display_tags
            (box
              :space-evenly false :spacing 6
              :orientation "v"
              (button ; Pin
                :class "sidebar-waifu-reset"
                :style "padding: 10px 10px"
                :onclick "${EWW_CMD} update waifu_art=''"
                "üóë"
              )
              (for id in WAIFU_TAG_ID_LIST
                (button
                  :onhover "${EWW_CMD} update display_tags=true"
                  :class "sidebar-waifu-tag"
                  :onclick "${EWW_CMD} update waifu_art=\"$(scripts/waifu.py ${WAIFU_CATEGORIES_ARGS[id]} ${is_nsfw == 'True' ? 'nsfw' : 'sfw'})\" &"
                  {WAIFU_CATEGORIES[id]}
                )
              )
            )
            
          )
        )
        (box
          :height 300
          :class "sidebar-waifu-image"
          :style "background-image: url('${waifu_art}');"
          :hexpand true
        )
      )
    )
  )
)

(defwidget sidebar_quote []
  (box
    :height 50
    :hexpand true
    :space-evenly false
    :orientation "v"
    (box ;Title
      :class "sidebar-title"
      (label
        :class "sidebar-title-text"
        :halign "start"
        :text ""
      )
    )
    (box ;Content
      :class "sidebar-quote-content"
      :orientation "v"
      (label ; A Quote
        :halign "start"
        :valign "start"
        :text "${quote}"
        ;; sidebar_quote
      )
      (box
        (label ; Its Author
          :class "author"
          :halign "end"
          :valign "end"
          :text "Âçê lilayman"
        )
      )
    )
  )
)


